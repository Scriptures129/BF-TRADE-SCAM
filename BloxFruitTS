-- Client-side script to handle GUI interactions and sending events
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local updateFruitsEvent = ReplicatedStorage:WaitForChild("UpdateFruitsEvent")
local freezeEvent = ReplicatedStorage:WaitForChild("FreezeEvent")
local readyTradeEvent = ReplicatedStorage:WaitForChild("ReadyTradeEvent")

-- Initialize the GUI and create buttons
local gui = Instance.new("ScreenGui")
gui.Name = "BFTradeScamGUI"
gui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

local frame = Instance.new("Frame")
frame.Name = "MainFrame"
frame.Size = UDim2.new(0, 200, 0, 150)
frame.Position = UDim2.new(0.5, -100, 0.5, -75)
frame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
frame.BorderSizePixel = 0
frame.AnchorPoint = Vector2.new(0.5, 0.5)
frame.Parent = gui

-- Add rounded corners to the frame
local uiCorner = Instance.new("UICorner")
uiCorner.CornerRadius = UDim.new(0, 8)
uiCorner.Parent = frame

-- Title bar
local title = Instance.new("TextLabel")
title.Name = "Title"
title.Size = UDim2.new(1, -1, 0, 25)
title.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
title.Text = "BF Trade Scam"
title.TextColor3 = Color3.new(1, 1, 1)
title.TextScaled = true
title.Font = Enum.Font.GothamBold
title.TextXAlignment = Enum.TextXAlignment.Left
title.Parent = frame

-- Minimize button
local minimizeButton = Instance.new("TextButton")
minimizeButton.Name = "MinimizeButton"
minimizeButton.Size = UDim2.new(0, 15, 0, 15)
minimizeButton.Position = UDim2.new(1, -20, 0, 5)
minimizeButton.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
minimizeButton.BorderSizePixel = 0
minimizeButton.Text = "—"
minimizeButton.TextColor3 = Color3.new(1, 1, 1)
minimizeButton.TextScaled = true
minimizeButton.Font = Enum.Font.GothamBold
minimizeButton.Parent = title

-- Create buttons with checkboxes
local function createButton(name, text, position, checkboxCallback)
    local buttonFrame = Instance.new("Frame")
    buttonFrame.Name = name
    buttonFrame.Size = UDim2.new(1, -20, 0, 30)
    buttonFrame.Position = position
    buttonFrame.BackgroundTransparency = 1
    buttonFrame.Parent = frame

    local buttonText = Instance.new("TextLabel")
    buttonText.Size = UDim2.new(0.8, 0, 1, 0)
    buttonText.BackgroundTransparency = 1
    buttonText.Text = text
    buttonText.TextColor3 = Color3.new(1, 1, 1)
    buttonText.TextScaled = true
    buttonText.Font = Enum.Font.Gotham
    buttonText.TextXAlignment = Enum.TextXAlignment.Left
    buttonText.Parent = buttonFrame

    local checkbox = Instance.new("TextButton")
    checkbox.Name = "Checkbox"
    checkbox.Size = UDim2.new(0, 20, 0, 20)
    checkbox.Position = UDim2.new(1, -25, 0.5, -10)
    checkbox.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    checkbox.BorderSizePixel = 2
    checkbox.AutoButtonColor = false
    checkbox.Parent = buttonFrame

    local uiCorner = Instance.new("UICorner")
    uiCorner.CornerRadius = UDim.new(0, 4)
    uiCorner.Parent = checkbox

    local checkSign = Instance.new("TextLabel")
    checkSign.Name = "CheckSign"
    checkSign.Size = UDim2.new(1, 0, 1, 0)
    checkSign.BackgroundTransparency = 1
    checkSign.Text = "✓"
    checkSign.TextColor3 = Color3.new(1, 1, 1)
    checkSign.TextScaled = true
    checkSign.Font = Enum.Font.GothamBold
    checkSign.Visible = false
    checkSign.Parent = checkbox

    checkbox.MouseButton1Click:Connect(function()
        checkSign.Visible = not checkSign.Visible
        checkboxCallback(checkSign.Visible)
    end)
end

-- Function to handle "Auto Ready Trade" checkbox
createButton("AutoReadyTrade", "Auto Ready Trade", UDim2.new(0, 10, 0, 120), function(isChecked)
    if isChecked then
        local targetPlayer = game.Players.LocalPlayer -- Replace with target player logic if needed
        if targetPlayer then
            print("Auto Ready Trade triggered for", targetPlayer.Name)
            readyTradeEvent:FireServer(targetPlayer)  -- Send event to server to auto-click ready
        end
    end
end)

-- Function to handle "Start Freeze Trade" checkbox
createButton("FreezeTrade", "Start Freeze Trade", UDim2.new(0, 10, 0, 80), function(isChecked)
    local targetPlayer = game.Players.LocalPlayer -- Replace with target player logic if needed
    if targetPlayer then
        print("Freeze Trade triggered for", targetPlayer.Name)
        freezeEvent:FireServer(targetPlayer, isChecked)  -- Freeze or unfreeze the UI for the other player
    end
end)

-- Function to handle replacing fruits
createButton("ReplaceFruits", "Start Trade Scam", UDim2.new(0, 10, 0, 40), function(isChecked)
    if isChecked then
        local targetPlayer = game.Players.LocalPlayer -- Replace with target player logic if needed
        if targetPlayer then
            print("Replace Fruits triggered for", targetPlayer.Name)
            updateFruitsEvent:FireServer(targetPlayer, "TrashFruitID")  -- Replace fruits with trash fruit
        end
    end
end)
