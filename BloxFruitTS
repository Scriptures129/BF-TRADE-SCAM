-- Ensure the game ID is 2753915549 (Blox Fruits)
if game.PlaceId ~= 2753915549 then
    -- Display an error message if the script is not executed in Blox Fruits
    local errorMessage = Instance.new("Message")
    errorMessage.Text = "The script is not supported the game. Only Blox Fruits is supported of the script (Game ID: 2753915549)."
    errorMessage.Parent = game.Workspace
    
    -- Optional: Remove the error message after some time
    wait(5)
    errorMessage:Destroy()

    return  -- Exit the script if it's not the correct game
end

-- Create the main GUI
local gui = Instance.new("ScreenGui")
gui.Name = "BFTradeScamGUI"
gui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Create the main frame
local frame = Instance.new("Frame")
frame.Name = "MainFrame"
frame.Size = UDim2.new(0, 200, 0, 150)
frame.Position = UDim2.new(0.5, -100, 0.5, -75)
frame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
frame.BorderSizePixel = 0
frame.AnchorPoint = Vector2.new(0.5, 0.5)
frame.Parent = gui

-- Add rounded corners to the frame
local uiCorner = Instance.new("UICorner")
uiCorner.CornerRadius = UDim.new(0, 8)
uiCorner.Parent = frame

-- Title bar
local title = Instance.new("TextLabel")
title.Name = "Title"
title.Size = UDim2.new(1, -1, 0, 25)  -- Adjust size to leave space for minimize button
title.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
title.Text = "BF Trade Scam"
title.TextColor3 = Color3.new(1, 1, 1)
title.TextScaled = true
title.Font = Enum.Font.GothamBold
title.TextXAlignment = Enum.TextXAlignment.Left
title.Parent = frame

-- Minimize button (Dash symbol, small size)
local minimizeButton = Instance.new("TextButton")
minimizeButton.Name = "MinimizeButton"
minimizeButton.Size = UDim2.new(0, 15, 0, 15)  -- Small size for the minimize button
minimizeButton.Position = UDim2.new(1, -20, 0, 5)  -- Positioned to the right and slightly below the top edge of the title bar
minimizeButton.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
minimizeButton.BorderSizePixel = 0
minimizeButton.Text = "—"  -- Dash symbol for minimize
minimizeButton.TextColor3 = Color3.new(1, 1, 1)
minimizeButton.TextScaled = true
minimizeButton.Font = Enum.Font.GothamBold
minimizeButton.Parent = title

-- Padding for title text
local uiPadding = Instance.new("UIPadding")
uiPadding.PaddingLeft = UDim.new(0, 8)
uiPadding.Parent = title

-- Make the GUI draggable for mobile and desktop
local dragging, dragStart, startPos

-- Function to update position of the frame
local function updateInput(input)
    local delta = input.Position - dragStart
    frame.Position = UDim2.new(
        startPos.X.Scale,
        startPos.X.Offset + delta.X,
        startPos.Y.Scale,
        startPos.Y.Offset + delta.Y
    )
end

frame.InputBegan:Connect(function(input, gameProcessed)
    if not gameProcessed then
        if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
            dragging = true
            dragStart = input.Position
            startPos = frame.Position
            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then
                    dragging = false
                end
            end)
        end
    end
end)

frame.InputChanged:Connect(function(input)
    if dragging and (input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch) then
        updateInput(input)
    end
end)

-- Minimize functionality
local isMinimized = false
minimizeButton.MouseButton1Click:Connect(function()
    isMinimized = not isMinimized
    frame.Size = isMinimized and UDim2.new(0, 200, 0, 30) or UDim2.new(0, 200, 0, 150)
    for _, child in ipairs(frame:GetChildren()) do
        if child.Name ~= "Title" then
            if child:IsA("Frame") then
                -- Hide both text labels and checkboxes
                for _, subChild in ipairs(child:GetChildren()) do
                    if subChild:IsA("TextLabel") or subChild.Name == "Checkbox" then
                        subChild.Visible = not isMinimized
                    end
                end
            end
        end
    end
end)

-- Function to create a button with a checkbox
local function createButton(name, text, position)
    local buttonFrame = Instance.new("Frame")
    buttonFrame.Name = name
    buttonFrame.Size = UDim2.new(1, -20, 0, 30)
    buttonFrame.Position = position
    buttonFrame.BackgroundTransparency = 1
    buttonFrame.Parent = frame

    local buttonText = Instance.new("TextLabel")
    buttonText.Size = UDim2.new(0.8, 0, 1, 0)
    buttonText.BackgroundTransparency = 1
    buttonText.Text = text
    buttonText.TextColor3 = Color3.new(1, 1, 1)
    buttonText.TextScaled = true
    buttonText.Font = Enum.Font.Gotham
    buttonText.TextXAlignment = Enum.TextXAlignment.Left
    buttonText.Parent = buttonFrame

    local checkbox = Instance.new("TextButton")
    checkbox.Name = "Checkbox"
    checkbox.Size = UDim2.new(0, 20, 0, 20)
    checkbox.Position = UDim2.new(1, -25, 0.5, -10)
    checkbox.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    checkbox.BorderSizePixel = 2
    checkbox.AutoButtonColor = false
    checkbox.Parent = buttonFrame

    local uiCorner = Instance.new("UICorner")
    uiCorner.CornerRadius = UDim.new(0, 4)
    uiCorner.Parent = checkbox

    -- "✓" Sign
    local checkSign = Instance.new("TextLabel")
    checkSign.Name = "CheckSign"
    checkSign.Size = UDim2.new(1, 0, 1, 0)
    checkSign.BackgroundTransparency = 1
    checkSign.Text = "✓"
    checkSign.TextColor3 = Color3.new(1, 1, 1)
    checkSign.TextScaled = true
    checkSign.Font = Enum.Font.GothamBold
    checkSign.Visible = false
    checkSign.Parent = checkbox

    -- Checkbox toggle functionality
    checkbox.MouseButton1Click:Connect(function()
        checkSign.Visible = not checkSign.Visible
    end)
end

-- Create buttons with checkboxes
createButton("StartTradeScam", "Start Trade Scam", UDim2.new(0, 10, 0, 40))
createButton("FreezeTrade", "Freeze Trade", UDim2.new(0, 10, 0, 75))
createButton("AutoReadyTrade", "Auto Ready Trade", UDim2.new(0, 10, 0, 110))
